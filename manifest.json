{
  "manifest_version": 3,
  "name": "Cardano Address Book",
  "version": "1.0.0",
  "description": "Store, name, and track Cardano wallet addresses with ease",
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://budbook-2410440cbb61.herokuapp.com/*",
    "https://cardano-mainnet.blockfrost.io/api/v0/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://budbook-2410440cbb61.herokuapp.com/ https://cardano-mainnet.blockfrost.io/;"
  }
}
